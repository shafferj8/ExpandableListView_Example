<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.rocketmbsoft.protectme.advanced" android:versionCode="9" android:versionName="2.3.0">

	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.CALL_PHONE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<application android:icon="@drawable/protectme"
		android:label="@string/app_name">
		<activity android:name=".Splash"
			android:screenOrientation="portrait" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="ProtectMePreferences"></activity>
		<service android:name="ProtectMeOrientationService"></service>
		<activity android:name="ProtectMeAlertActivity"
			android:screenOrientation="portrait"></activity>

		<activity android:name="ProtectMeActivity" android:screenOrientation="portrait"></activity>
		<activity android:name="ProtectMeSumActivity"></activity>
		<activity android:name="ExpandableContacts"></activity>
		<service android:name="ProtectMeSpeakService"></service>
		<service android:label="ProtectMeShakeService" android:name="ProtectMeShakeService"></service>
	<activity android:screenOrientation="portrait" android:name="ProtectMeOrientationPreferenceActivity"></activity>
</application>
	<uses-sdk android:minSdkVersion="4" />



	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
</manifest> 